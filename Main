<footer>
    ƒ∞stanbul Express Laundry ¬∑ ƒ∞stanbul / T√ºrkiye ¬∑ WhatsApp: +90 535 551 40 39 ¬∑ √áalƒ±≈üma Saatleri: 09:00 ‚Äì 22:00
</footer>

<script>
    // ---------- CONFIGURABLE AREA ----------
    // Buraya kendi WhatsApp numaranƒ± gir (sadece rakam, + i≈üareti yok).
    // √ñrnek: 905551112233
    const WHATSAPP_NUMBER = "905355514039";

    // Hizmet listesi ‚Äì fiyatlarƒ± ve isimleri kendine g√∂re d√ºzenleyebilirsin
    const services = [
        {
            id: 1,
            name: "√áama≈üƒ±r Yƒ±kama (Kg)",
            description: "Karƒ±≈üƒ±k g√ºnl√ºk √ßama≈üƒ±r, katlama dahil",
            price: 60,
            unit: "kg"
        },
        {
            id: 2,
            name: "G√∂mlek Yƒ±kama + √út√º",
            description: "Beyaz ve renkli g√∂mlekler",
            price: 40,
            unit: "adet"
        },
        {
            id: 3,
            name: "Pantolon Yƒ±kama + √út√º",
            description: "Kuma≈ü ve g√ºnl√ºk pantolonlar",
            price: 45,
            unit: "adet"
        },
        {
            id: 4,
            name: "Nevresim Takƒ±mƒ±",
            description: "Nevresim + √ßar≈üaf + 2 yastƒ±k kƒ±lƒ±fƒ±",
            price: 120,
            unit: "takƒ±m"
        },
        {
            id: 5,
            name: "Kuru Temizleme ‚Äì Ceket",
            description: "Takƒ±m elbise ceketi",
            price: 150,
            unit: "adet"
        },
        {
            id: 6,
            name: "Sadece √út√º (Karƒ±≈üƒ±k)",
            description: "√út√º yapƒ±lacak karƒ±≈üƒ±k kƒ±yafetler",
            price: 50,
            unit: "kg"
        }
    ];

    // --------- CART STATE ----------
    let cart = [];

    function renderServices() {
        const container = document.getElementById("services-list");
        container.innerHTML = "";

        services.forEach(service => {
            const card = document.createElement("div");
            card.className = "service-card";

            card.innerHTML = `
                <div>
                    <div class="service-name">${service.name}</div>
                    <div class="service-meta">${service.description}</div>
                </div>
                <div class="service-bottom">
                    <div class="service-price">${service.price}‚Ç∫ / ${service.unit}</div>
                    <button class="btn btn-primary btn-xs" onclick="addToCart(${service.id})">
                        Sepete Ekle
                    </button>
                </div>
            `;

            container.appendChild(card);
        });
    }

    function renderCart() {
        const cartContent = document.getElementById("cart-content");
        const summaryWrapper = document.getElementById("cart-summary-wrapper");
        const totalEl = document.getElementById("cart-total");

        if (cart.length === 0) {
            cartContent.innerHTML = `<p class="cart-empty">Hen√ºz √ºr√ºn eklemedin. Soldan hizmet se√ßerek sepete ekleyebilirsin.</p>`;
            summaryWrapper.style.display = "none";
            totalEl.textContent = "0‚Ç∫";
            return;
        }

        let html = `<ul class="cart-items">`;
        let total = 0;

        cart.forEach(item => {
            const lineTotal = item.price * item.quantity;
            total += lineTotal;

            html += `
                <li class="cart-item">
                    <div class="cart-item-info">
                        <span class="cart-item-title">${item.name}</span>
                        <span class="cart-item-qty">${item.quantity} ${item.unit} √ó ${item.price}‚Ç∫</span>
                    </div>
                    <div class="cart-item-actions">
                        <button class="cart-qty-btn" onclick="changeQuantity(${item.id}, -1)">‚àí</button>
                        <span style="font-size:0.8rem; min-width:16px; text-align:center;">${item.quantity}</span>
                        <button class="cart-qty-btn" onclick="changeQuantity(${item.id}, 1)">+</button>
                        <button class="cart-remove" onclick="removeFromCart(${item.id})">sil</button>
                    </div>
                </li>
            `;
        });

        html += `</ul>`;
        cartContent.innerHTML = html;

        summaryWrapper.style.display = "block";
        totalEl.textContent = total + "‚Ç∫";
    }

    function addToCart(serviceId) {
        const service = services.find(s => s.id === serviceId);
        if (!service) return;

        const existing = cart.find(item => item.id === serviceId);
        if (existing) {
            existing.quantity += 1;
        } else {
            cart.push({
                id: service.id,
                name: service.name,
                price: service.price,
                unit: service.unit,
                quantity: 1
            });
        }
        renderCart();
    }

    function changeQuantity(serviceId, delta) {
        const item = cart.find(i => i.id === serviceId);
        if (!item) return;
        item.quantity += delta;
        if (item.quantity <= 0) {
            cart = cart.filter(i => i.id !== serviceId);
        }
        renderCart();
    }

    function removeFromCart(serviceId) {
        cart = cart.filter(i => i.id !== serviceId);
        renderCart();
    }

    function clearCart() {
        cart = [];
        renderCart();
    }

    function sendWhatsAppOrder() {
        if (cart.length === 0) {
            alert("Sepetin bo≈ü. √ñnce hizmet ekle.");
            return;
        }

        const name = document.getElementById("cart-name").value.trim();
        const address = document.getElementById("cart-address").value.trim();
        const notes = document.getElementById("cart-notes").value.trim();

        let message = "Merhaba, ƒ∞stanbul Express Laundry √ºzerinden sipari≈ü olu≈üturmak istiyorum.%0A%0A";

        if (name) {
            message += `Ad Soyad: ${name}%0A`;
        }
        if (address) {
            message += `Adres: ${address}%0A`;
        }
        if (notes) {
            message += `Not: ${notes}%0A`;
        }

        message += "%0ASipari≈ü Detayƒ±:%0A";

        let total = 0;
        cart.forEach(item => {
            const lineTotal = item.price * item.quantity;
            total += lineTotal;
            message += `- ${item.name} (${item.quantity} ${item.unit}) = ${lineTotal}‚Ç∫%0A`;
        });

        message += `%0ATahmini Toplam: ${total}‚Ç∫%0A`;
        message += "%0AL√ºtfen m√ºsait olduƒüunuzda d√∂n√º≈ü yapar mƒ±sƒ±nƒ±z?";

        const url = `https://wa.me/${WHATSAPP_NUMBER}?text=${message}`;
        window.open(url, "_blank");
    }

    function scrollToServices() {
        document.getElementById("services").scrollIntoView({ behavior: "smooth" });
    }

    function scrollToCart() {
        document.getElementById("cart").scrollIntoView({ behavior: "smooth" });
    }

    // Initialize
    renderServices();
    renderCart();
</script>
</body>
</html>
